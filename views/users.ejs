<html lang="en">
<%- include('./partial/head.ejs', { pageName : 'About'}) %>
    <body>
        <%- include('./partial/nav.ejs')%>
        <div class="container mt-4">
            <h2>Users</h2>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.id %></td>
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <button class="btn btn-sm btn-primary me-2 edit-btn" data-id="1">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger delete-btn" data-id="1">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }) %> 
                    </tbody>
                </table>
            </div>
            <h2>Users</h2>
            <form action="/users" method="post">
                
            </form>
        </div>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">    </body>
    </body>
</html>