<!-- Form data -->
<form action="/home" method="post">
    <div class="form-group">
        <h5 id="username">User: </h5>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="mood">
                <h5>Your mood</h5>
            </label>
            <select name="mood" id="moods" class="form-control">
                <% moods.forEach(mood => { %>
                    <option value="<%= mood.value %>" id="<%= mood.value %>"><%= mood.label %></option>  
                <% }) %>
            </select>
        </div>
        <div class="form-group col-md-4">
            <label for="weather">
                <h5>Wether</h5>
            </label>
            <select name="weather" id="weather" class="form-control">
                <% weathers.forEach(weather => { %>
                    <option value="<%= weather.value %>" id="<%= weather.value %>"><%= weather.label %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group col-md-4">
            <label for="date">
                <h5>Date</h5>
            </label>
            <input id="dateInput" type="date" name="date" class="form-control" value="2024-05-25">
        </div>
    </div>
    <fieldset>
        <label>
            <h5>Tags</h5>
        </label>
        <%- include('tags.ejs', { tags }); %>
    </fieldset>
    <div class="form-group mt-3">
        <label for="note">
            <h5>Your Note</h5>
        </label>
        <textarea name="note" class="form-control" id="note" rows="3" placeholder="type your note"></textarea>
    </div>
</form>
